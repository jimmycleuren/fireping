{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-sm-3 col-md-2 sidebar" style="padding:0px;">
        {% include 'menu/menu.html.twig' %}
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">{{ domain.name }}</h1>

        <div class="row">
            <div class="col-md-10">
                {% for device in domain.devices %}
                    <h4>{{ device.name }} - {{ device.ip }}</h4>
                    <a href="{{ path('app_device_get', {id: device.id}) }}"><img src="{{ path('app_graph_summary', {id: device.id, start:start, end:end}) }}" /></a><br/>
                {% endfor %}
            </div>

            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Update start and end time</div>
                    <div class="panel-body">
                        <form method="get">
                            <input type="text" class="form-control datetimepicker" name="start" value="{{ start }}">
                            <input type="text" class="form-control datetimepicker" name="end" value="{{ end }}">
                            <input type="submit" class="btn btn-primary" value="Update">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function () {
            flatpickr(".datetimepicker", {enableTime: true, time_24hr: true, dateFormat: "U", altInput: true, altFormat: "d-m-Y H:i"})
        });
    </script>
{% endblock %}